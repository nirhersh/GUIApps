<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            padding: 15, 15
            spacing: 20, 20
            cols: 1
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.forget_password()
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        padding: 20, 20
        spacing: 20, 20
        cols: 1
        Label:
            text: "Sign Up for the Journey"
        RelativeLayout
            TextInput:
                id: username
                hint_text: "New Username"
                size_hint: 1, 0.5
        RelativeLayout
            TextInput:
                id: password
                hint_text: "New Password"
                size_hint: 1, 0.5
        RelativeLayout:
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Label:
            id: not_valid
            text: ""


<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up Was Successful"
        RelativeLayout:
            Button:
                text: "Login Page"
                on_press: root.go_to_login()
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: "how do you feel?"
        TextInput:
            id: feeling
            hint_text: "Thing to try: happy, sad, unloved..."
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<ForgetPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        RelativeLayout:
            TextInput:
                id: username
                hint_text: "Enter Username"
                size_hint: 1, 0.5
        RelativeLayout:
            Button:
                text: "Password"
                on_press: root.get_password(root.ids.username.text)
                size_hint: 0.35, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}


        Label:
            id: password
            text: ""
        RelativeLayout:
            Button:
                id: go_to_login
                on_press: root.go_to_login()
                text: "Login"
                size_hint: 0.2, 0.2
                pos_hint: {'center_x': 0.1, 'center_y': 0.6}


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    ForgetPasswordScreen
        name: "forget_password_screen"